@model Menu

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail"> 
        <div class="card">
            <div class="card-img">
                <img class="img" alt="@Model.Name" src="@Model.ImgPathUrl" />
            </div>
        </div>
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Menu" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a>
            </h3>
            <p> @Model.Description</p>
        </div>

        <button class="btn btn-primary">Add to Cart</button>
    </div>
</div>


